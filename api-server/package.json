{
  "name": "homebrew-cli-guide-api",
  "version": "1.0.0",
  "description": "RESTful API for the Homebrew CLI Guide",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t homebrew-cli-api .",
    "docker:run": "docker run -p 3000:3000 homebrew-cli-api"
  },
  "keywords": [
    "api",
    "homebrew", 
    "cli",
    "tools",
    "rest"
  ],
  "author": "Homebrew CLI Guide Contributors",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
